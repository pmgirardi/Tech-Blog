<article>
  <h2>{{title}}</h2>
  <h3>Posted by {{username}} on {{format_date date}}</h3>
  <p>{{content}}</p>
</article>
{{#each comments as |comment|}}
  <section>
    <h2>Comments</h2>
    <h3>Posted by
      {{comment.user.username}}
      on
      {{format_date comment.created_at}}</h3>
    <p>{{comment.content}}</p>
  </section>
{{/each}}
{{#if logged_in}}
  <section>
    <h2>New Comment</h2>
    <form class="comment_form">
      <label for="comment">Comment</label><br />
      <textarea
        id="comment"
        name="comment"
        type="text"
        form="comment_form"
      ></textarea><br />
      <button type="submit">Comment</button>
    </form>
  </section>
{{/if}}
{{#if logged_in}}
  <script src="public/js/comment.js"></script>
{{/if}}